extends ../main

block content
  h3 Edit Session
  form(method='post', action='/movie_sessions/add').form
    div.form-group
      label(for='movie') Movie
      select(name='movie_id', required=true)#movie.form-control
        option(selected=true, disabled=true, hidden=true, style='display: none' value='') Please select...
        each movie in movies
          option(value=movie.id selected=(parseInt(movie_session.movie_id) === movie.id)) #{movie.title}
    div.form-group
      label(for='cinema') Cinema
      select(name='cinema_id', required=true)#cinema.form-control
        option(selected=true, disabled=true, hidden=true, style='display: none' value='') Please select...
        each cinema in cinemas
          option(value=cinema.id selected=(parseInt(movie_session.cinema_id) === cinema.id)) #{cinema.city}
    div.row
      div.col-sm-6
        div.form-group
          label(for='date') Date
          input(type='date', name='date' value=(movie_session.scheduled_at.split(' ')[0]))#date.form-control
      div.col-sm-6
        div.form-group
          label(for='time') Time
          input(type='time', name='time' value=(movie_session.scheduled_at.split(' ')[1]))#time.form-control

    button.btn.btn-primary.pull-right Save
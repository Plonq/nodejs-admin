extends ../main

block content
  h3 Add New Session
  form(method='post', action='/movie_sessions/add').form
    div.form-group
      label(for='movie') Movie
      select(name='movie_id', required=true)#movie.form-control
        option(selected=true, disabled=true, hidden=true, style='display: none' value='') Please select...
        each movie in movies
          option(value=movie.id selected=(!!selected_movie && parseInt(selected_movie) === movie.id)) #{movie.title}
    div.form-group
      label(for='cinema') Cinema
      select(name='cinema_id', required=true)#cinema.form-control
        option(selected=true, disabled=true, hidden=true, style='display: none' value='') Please select...
        each cinema in cinemas
          option(value=cinema.id) #{cinema.city}
    div.row
      div.col-sm-6
        div.form-group
          label(for='date') Date
          input(type='date', name='date')#date.form-control
      div.col-sm-6
        div.form-group
          label(for='time') Time
          input(type='time', name='time')#time.form-control

    button.btn.btn-primary.pull-right Create Session